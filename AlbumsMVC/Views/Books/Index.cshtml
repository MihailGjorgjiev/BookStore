    <script>
        $(document).on("ready", function () {
            //var table = $("#booksTable").DataTable();
            new DataTable('#booksTable');
            dialog = $("#dialog-confirm").dialog({
                autoOpen:false,
                resizable: false,
                height: "auto",
                width: 400,
                modal: true,
                buttons: {
                    "Delete": function () {
                        $.ajax({
                            url: "/Books/Delete/" + $(this).data('id'),
                            type: 'GET',
                            success: function () {
                                setTimeout(function () {
                                    window.location.reload(1);
                                }, 10);
                            }
                        });
                        
                        $(this).dialog("close");
                    },
                    Cancel: function () {
                        $(this).dialog("close");
                    }
                }
            });

        });

    </script>

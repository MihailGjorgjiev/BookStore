@model AlbumsMVC.Models.Order
@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Album</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Name
        </dt>

        <dd>
            @ViewBag.purchase.FullName
        </dd>

        <dt>
            Book
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Book.Title)
        </dd>

        <dt>
            Date
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DateOfPurchase)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Book.Price)
        </dt>

        <dd>
            $@Html.DisplayFor(model => model.Book.Price)
        </dd>

        <dt>
            Address
        </dt>

        <dd>
            @ViewBag.purchase.Address
        </dd>


    </dl>
</div>

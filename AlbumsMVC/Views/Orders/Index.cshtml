@model IEnumerable<AlbumsMVC.Models.Order>
@{
    ViewBag.Title = "Index";
}

<h2 style="visibility:hidden">Index</h2>
@Html.ActionLink("Export To Excel","Excel",null,  new { @class = "btn btn-primary" } )
<h5 style="visibility:hidden">Index</h5>
<table class="table" id="ordersTable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Book.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateOfPurchase)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Book.Price)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Book.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.User.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateOfPurchase)
                </td>
                <td>
                    $@Html.DisplayFor(modelItem => item.Book.Price)
                </td>
                <td>
                    @Html.ActionLink("Details", "Details", new { id = item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>


